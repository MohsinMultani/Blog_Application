<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Auther:</strong>
  <%= @blog.auther %>
</p>

<p>
  <strong>Description:</strong>
  <%= @blog.description %>
</p>

<h2>comments</h2>
<%= @blog.comments.each do |comment| %>
  <p><%= comment.text %></p>
  <p><%= time_ago_in_words comment.created_at %>
<% end %>




<% if @user_id == @blog.user_id %>
  <%= link_to 'Edit', edit_blog_path(@blog) %> |
<% end %>
