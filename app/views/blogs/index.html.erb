<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Auther</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog %></td>
        <td><%= blog.auther %></td>
        <td><%= blog.description %></td>
        <td><%= image_tag blog.image.url(:thumb), height: '72', width: '72' %> </td>
        
        
        <% if can? :update, blog %>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <% end %>
        <% if can? :destroy, blog %>
          <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>

</table>

<br>


